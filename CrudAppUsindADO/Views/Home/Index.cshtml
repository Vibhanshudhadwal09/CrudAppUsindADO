@model IEnumerable<CrudAppUsindADO.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5">
    <div class="bg-danger p-3 rounded mb-4 text-white d-flex justify-content-between align-items-center">
        <h1 class="mb-0">Student Details</h1>
        @Html.ActionLink("Logout", "Index", "Login", null, new { @class = "btn btn-light rounded-3" })
    </div>
</div>


    <div class="d-flex justify-content-between mb-4">
        <a asp-action="Create" class="btn btn-outline-primary rounded-3">Create New</a>
        @Html.ActionLink("Teachers Section", "Index", "Teacher", null, new { @class = "btn btn-outline-danger rounded-3" })
        @Html.ActionLink("Subject Section", "Index", "Subject", null, new { @class = "btn btn-outline-danger rounded-3" })
    </div>

    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.City)</th>
                <th>@Html.DisplayNameFor(model => model.Pincode)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.ImagePath)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.Pincode)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.ImagePath)</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-sm rounded" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-warning btn-sm rounded" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-sm rounded" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
