@model CrudAppUsindADO.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5 bg-image">
    <div class="bg-danger p-3 rounded mb-4 text-center text-white">
        <h1>Delete Employee</h1>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-center mb-4">Are you sure you want to delete this?</h3>
            <h4 class="text-center mb-4">Employee Details</h4>
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">City</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.City)</dd>

                <dt class="col-sm-3">Pincode</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Pincode)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </div>
</div>
